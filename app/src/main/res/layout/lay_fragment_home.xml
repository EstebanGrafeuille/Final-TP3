<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragHome"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.Fragments.HomeFragment">

    <!-- TODO: Update blank fragment layout -->

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/restauranteRecycler"
        android:layout_width="0dp"
        android:layout_height="431dp"
        android:layout_marginBottom="116dp"
        app:layout_constraintBottom_toBottomOf="@+id/textView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="Home"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="26dp"
        android:layout_height="35dp"
        android:layout_marginStart="19dp"
        android:layout_marginBottom="34dp"
        android:src="@drawable/hamburgerfilter"
        app:layout_constraintBottom_toTopOf="@+id/restauranteRecycler"
        app:layout_constraintStart_toEndOf="@+id/Pizzafilter" />

    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="25dp"
        android:layout_height="37dp"
        android:layout_marginStart="11dp"
        android:layout_marginBottom="33dp"
        android:src="@drawable/pizzafilter"
        app:layout_constraintBottom_toTopOf="@+id/restauranteRecycler"
        app:layout_constraintStart_toEndOf="@+id/All" />

    <ImageView
        android:id="@+id/imageView12"
        android:layout_width="27dp"
        android:layout_height="37dp"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="33dp"
        android:src="@drawable/tacofilter"
        app:layout_constraintBottom_toTopOf="@+id/restauranteRecycler"
        app:layout_constraintStart_toEndOf="@+id/Burgerfilter" />

    <Button
        android:id="@+id/tacoFilter"
        android:layout_width="72dp"
        android:layout_height="37dp"
        android:layout_marginStart="27dp"
        android:layout_marginBottom="34dp"
        android:backgroundTint="#FF7C7C"
        android:text="Taco"
        android:textSize="5sp"
        app:layout_constraintBottom_toTopOf="@+id/restauranteRecycler"
        app:layout_constraintStart_toStartOf="@+id/imageView12" />

    <Button
        android:id="@+id/Burgerfilter"
        android:layout_width="73dp"
        android:layout_height="35dp"
        android:layout_marginBottom="35dp"
        android:backgroundTint="#FF7C7C"
        android:text="Burger"
        android:textSize="5sp"
        app:layout_constraintBottom_toTopOf="@+id/restauranteRecycler"
        app:layout_constraintStart_toEndOf="@+id/imageView2" />

    <Button
        android:id="@+id/Pizzafilter"
        android:layout_width="72dp"
        android:layout_height="35dp"
        android:layout_marginBottom="34dp"
        android:backgroundTint="#FF7C7C"
        android:text="Pizza"
        android:textSize="5sp"
        app:layout_constraintBottom_toTopOf="@+id/restauranteRecycler"
        app:layout_constraintStart_toEndOf="@+id/imageView10" />

    <Button
        android:id="@+id/All"
        android:layout_width="71dp"
        android:layout_height="33dp"
        android:backgroundTint="#FF7C7C"
        android:text="All"
        android:textSize="5sp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="114dp" />


    }


</androidx.constraintlayout.widget.ConstraintLayout>